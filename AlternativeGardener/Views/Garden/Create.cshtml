@using AlternativeGardener.Models.Enums
@model AlternativeGardener.Models.Garden

@{
    ViewData["Title"] = "Create Garden";
}

<h1>Create Garden</h1>

<h4>Create Garden</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="GardenMvc" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GardenName" class="control-label"></label>
                <input asp-for="GardenName" class="form-control" />
                <span asp-validation-for="GardenName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GardenLocation" class="control-label"></label>
                <select asp-for="GardenLocation" class="form-select" asp-items="Html.GetEnumSelectList<Location>()">
                    <option value=""> -- Select Garden Location -- </option>
                </select>
                <span asp-validation-for="GardenLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GardenSize" class="control-label"></label>
                <input asp-for="GardenSize" class="form-control" />
                <span asp-validation-for="GardenSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GardenType" class="control-label"></label>
                <select asp-for="GardenType" class="form-select" asp-items="Html.GetEnumSelectList<GardenType>()">
                    <option value=""> -- Select Garden Type -- </option>
                </select>
                <span asp-validation-for="GardenType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-sm mt-3">Create Garden</button>                
                <a class="btn btn-danger btn-sm mt-3" asp-action="Index" asp-controller="GardenMvc">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="GardenMvc">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
