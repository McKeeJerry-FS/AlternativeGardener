@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center">
    <h1 class="display-4">Welcome to your Dashboard!</h1>
    <p>This is a quick snapshot of what is going on with your gardens!</p>
</div>
<div class="row">
    <div class="col-sm-12 col-md-6">
        <div class="card" id="card1">
            <div class="card-header bg-primary text-light">Your Gardens</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm table-striped table-hover" id="dashboardGardenTable">
                        <thead>
                            <tr>
                                <th>Garden Name</th>
                                <th>Garden Location</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Rail System</td>
                                <td>Grow Tent</td>
                            </tr>
                            <tr>
                                <td>Rail System</td>
                                <td>Grow Tent</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-12 col-md-6">
        <div class="card" id="card2">
            <div class="card-header bg-primary text-light">Your Plants</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm table-striped table-hover" id="dashboardPlantTable">
                        <thead>
                            <tr>
                                <th>Plant Name</th>
                                <th>Garden Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Romaine Letuce</td>
                                <td>Rail System</td>
                            </tr>
                            <tr>
                                <td>Sweet Basil</td>
                                <td>NFT</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-sm-12 col-md-6">
        <div class="card" id="card3">
            <div class="card-header bg-primary text-light">Water Quality</div>
            <div class="card-body">
                <div class="chart-container">
                    <canvas id="waterQualityChart"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-12 col-md-6">
        <div class="card" id="card4">
            <div class="card-header bg-primary text-light">Average Plant Growth</div>
            <div class="card-body">
                <div class="chart-container">
                    <canvas id="plantGrowthChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-12">
        <div class="card" id="card5">
            <div class="card-header bg-primary text-light">Records</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm table-striped table-hover" id="dashboardRecordsTable">
                        <thead>
                            <tr>
                                <th>Garden Name</th>
                                <th>Plant Qty</th>
                                <th>Location</th>
                                <th>Last Watered</th>
                                <th>Last Fertilized</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Rail System</td>
                                <td>10</td>
                                <td>Grow Tent</td>
                                <th>09/20/2025</th>
                                <th>09/20/2025</th>
                            </tr>
                            <tr>
                                <td>Rail System</td>
                                <td>10</td>
                                <td>Grow Tent</td>
                                <th>09/15/2025</th>
                                <th>09/15/2025</th>
                            </tr>
                            <tr>
                                <td>Rail System</td>
                                <td>10</td>
                                <td>Grow Tent</td>
                                <th>09/10/2025</th>
                                <th>09/10/2025</th>
                            </tr>
                            <tr>
                                <td>Rail System</td>
                                <td>10</td>
                                <td>Grow Tent</td>
                                <th>09/05/2025</th>
                                <th>09/05/2025</th>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.3/dist/chart.umd.min.js"></script>
    <script src="~/js/dashboard.js" asp-append-version="true"></script>
}